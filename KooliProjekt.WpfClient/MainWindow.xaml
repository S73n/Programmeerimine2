<Window x:Class="KooliProjekt.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KooliProjekt.WpfClient"
        mc:Ignorable="d"
        Title="Customers" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="CustomerList" DisplayMemberPath="Name" SelectionChanged="CustomerList_SelectionChanged"/>
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Name"/>
            <TextBox x:Name="NameBox" Margin="0,0,0,5"/>
            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailBox" Margin="0,0,0,5"/>
            <TextBlock Text="Phone"/>
            <TextBox x:Name="PhoneBox" Margin="0,0,0,5"/>
            <TextBlock Text="Address"/>
            <TextBox x:Name="AddressBox" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Salvesta" Click="Save_Click" Width="80" Margin="0,0,5,0"/>
                <Button Content="Uus" Click="New_Click" Width="80" Margin="0,0,5,0"/>
                <Button Content="Kustuta" Click="Delete_Click" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
